# Application
PROJECT_NAME=Onless.uz
VERSION=0.1.0
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8081"]
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=onless
POSTGRES_PASSWORD=onless_password
POSTGRES_DB=onless_db

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# First Superuser
FIRST_SUPERUSER_EMAIL=admin@onless.uz
FIRST_SUPERUSER_PASSWORD=changethis

# Email (for notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@onless.uz
EMAILS_FROM_NAME=Onless.uz

# External Services
# Google Calendar API
GOOGLE_CALENDAR_SERVICE_ACCOUNT_FILE=service-account.json
GOOGLE_CALENDAR_ID=info@onless.uz

# SMS OTP Provider
SMS_PROVIDER_API_KEY=
SMS_PROVIDER_URL=

# WhatsApp Business API
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Payment Gateway (e.g., Payme, Click, Uzum)
PAYMENT_PAYME_MERCHANT_ID=
PAYMENT_PAYME_SECRET_KEY=
PAYMENT_CLICK_MERCHANT_ID=
PAYMENT_CLICK_SECRET_KEY=

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.webp

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
